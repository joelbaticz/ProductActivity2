@model ProductViewModel

<h2 class="text-center">Create New Product</h2>

<form class="form-horizontal" asp-controller="Home" asp-action="Create" method="post" role="form">

    <div class="form-group">
        <label class="col-sm-2 control-label" asp-for="Name"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Name" />
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label" asp-for="Details"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Details" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label" asp-for="Type"></label>
        <div class="col-sm-10">
            <select class="form-control" asp-for="Type"
                    asp-items="@Html.GetEnumSelectList(typeof(ProductTypeEnum))"></select>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">

            <input class="btn btn-default" type="submit" value="Save" />
            @*<button id="reset" class="btn btn-default" type="reset" value="Reset" data-toggle="modal" data-target="#myModal">Reset</button>*@
        </div>
   </div>
</form>
